<body>
<div class="container">
    <h1>DELETE ${city.name}</h1>
    <p>Are you sure?</p>
    <form action="city?action=delete" method="post">
        <input name="id" value="${city.id}" hidden/>
        <button class="btn btn-danger" type="submit">DELETE</button>
        <a class="btn btn-primary" href="/city">CANCEL</a>
    </form>
</div>
</body>
